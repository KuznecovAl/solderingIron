<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="shop-update" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>internet_shop.entities.User</class>
        <class>internet_shop.entities.Order</class>
        <class>internet_shop.entities.Item</class>
        <class>internet_shop.entities.Product</class>
        <class>internet_shop.entities.Address</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/shop_db?createDatabaseIfNotExist=true"/>
            <property name="javax.persistence.jdbc.user" value="Kozma"/>
            <property name="javax.persistence.jdbc.password" value="+375297515313"/>
            <property name="hibernate.dialect.storage_engine" value="innodb"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.connection.pool_size" value="10"/>
            <property name="hibernate.connection.isolation" value="2"/>
        </properties>
    </persistence-unit>

    <persistence-unit name="shop-validate" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>internet_shop.entities.User</class>
        <class>internet_shop.entities.Order</class>
        <class>internet_shop.entities.Item</class>
        <class>internet_shop.entities.Product</class>
        <class>internet_shop.entities.Address</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/shop_db?createDatabaseIfNotExist=true"/>
            <property name="javax.persistence.jdbc.user" value="Kozma"/>
            <property name="javax.persistence.jdbc.password" value="+375297515313"/>
            <property name="hibernate.dialect.storage_engine" value="innodb"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.connection.pool_size" value="10"/>
            <property name="hibernate.connection.isolation" value="2"/>
        </properties>
    </persistence-unit>
</persistence>

